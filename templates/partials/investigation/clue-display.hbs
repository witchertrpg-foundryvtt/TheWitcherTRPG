{{#if item.system.isHidden}}
    {{#if isGM}}
        <tr class="item hidden-view" data-item-id="{{item.id}}">
    {{else}}
        <tr class="item hidden-from-view" data-item-id="{{item.id}}">
    {{/if}}
{{else}}
    <tr class="item" data-item-id="{{item.id}}">
{{/if}}
<td><a class="item-edit"><i class="fas fa-edit"></i></a></td>
<td><input class="inline-edit" data-field="name" type="text" value="{{item.name}}" placeholder="name" /></td>
<td><input class="inline-edit" data-field="system.type" type="text" value="{{item.system.type}}" /></td>
<td><input class="inline-edit" data-field="system.dc" type="number" value="{{item.system.dc}}" /></td>
<td>
    <multi-select class="inline-edit" data-field="system.skillsUsed">
        {{selectOptions skills selected=system.skillsUsed nameAttr='name' valueAttr="name" labelAttr="label" localize=true}}
    </multi-select>
</td>
<td><input class="inline-edit" data-field="system.timeIncrement" type="text" value="{{item.system.timeIncrement}}" />
</td>
<td><input class="inline-edit" data-field="system.timeBonus" type="number" value="{{item.system.timeBonus}}" /></td>
<td><input class="inline-edit" data-field="system.damage" type="text" value="{{item.system.damage}}" /></td>
<td><input class="inline-edit" data-field="system.obfuscation" type="number" value="{{item.system.obfuscation}}" /></td>
<td><input class="inline-edit" data-field="system.penalty" type="text" value="{{item.system.penalty}}" /></td>
<td><input class="inline-edit" data-field="system.focusDamage" type="text" value="{{item.system.focusDamage}}" /></td>
<td>
    {{#if isGM}}
        <a class="item-delete"><i class="fas fa-trash-alt"></i></a>
        <a class="item-hide"><i class="fas fa-eye"></i></a>
    {{/if}}
</td>
<td>
    <a class="roll-clue"><i class="fas fa-dice-d20"></i></a>
</td>
</tr>