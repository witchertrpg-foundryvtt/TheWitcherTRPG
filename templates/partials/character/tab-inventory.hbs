<div class="wrapper">
    <div class="weight-value">
        <span>{{totalWeight}}/{{system.coreStats.enc.current}} </span>
    </div>
    {{#if (gte totalWeight system.coreStats.enc.current)}}
        <div class="weightbar-overweight"></div>
    {{else}}
        <progress class="weightbar" value="{{totalWeight}}" max="{{system.coreStats.enc.current}}"></progress>
    {{/if}}
</div>
<div class="flex">
    <div class="weapon-section">
        <div class="flex">
            <div class="currency">
                <label>{{localize "WITCHER.Currency.bizant"}}</label>
                <input class="small-medium" name="system.currency.bizant" type="number"
                    value="{{system.currency.bizant}}" placeholder="0" data-dtype="Number" />
            </div>
            <div class="currency">
                <label>{{localize "WITCHER.Currency.ducat"}}</label>
                <input class="small-medium" name="system.currency.ducat" type="number" value="{{system.currency.ducat}}"
                    placeholder="0" data-dtype="Number" />
            </div>
            <div class="currency">
                <label>{{localize "WITCHER.Currency.lintar"}}</label>
                <input class="small-medium" name="system.currency.lintar" type="number"
                    value="{{system.currency.lintar}}" placeholder="0" data-dtype="Number" />
            </div>
            <div class="currency">
                <label>{{localize "WITCHER.Currency.floren"}}</label>
                <input class="small-medium" name="system.currency.floren" type="number"
                    value="{{system.currency.floren}}" placeholder="0" data-dtype="Number" />
            </div>
            <div class="currency">
                <label>{{localize "WITCHER.Currency.crown"}}</label>
                <input class="small-medium" name="system.currency.crown" type="number" value="{{system.currency.crown}}"
                    placeholder="0" data-dtype="Number" />
            </div>
            <div class="currency">
                <label>{{localize "WITCHER.Currency.oren"}}</label>
                <input class="small-medium" name="system.currency.oren" type="number" value="{{system.currency.oren}}"
                    placeholder="0" data-dtype="Number" />
            </div>
            <div class="currency">
                <label>{{localize "WITCHER.Currency.falsecoin"}}</label>
                <input class="small-medium" name="system.currency.falsecoin" type="number"
                    value="{{system.currency.falsecoin}}" placeholder="0" data-dtype="Number" />
            </div>
        </div>

        <div class="weapon-header">
            <a class="weapon-list-display">
                <i class="fa-solid fa-chevron-up"></i>
            </a>
            <h3>{{localize "WITCHER.Inventory.Weapons"}}</h3>
            <div class="weapon-label">
                <span>{{localize "WITCHER.table.Damage"}}</span>
                <span>{{localize "WITCHER.table.Reliability"}}</span>
                <span>{{localize "WITCHER.table.Quantity"}}</span>
                <span>
                    <a class="add-item" data-itemType="weapon">
                        <i class="fas fa-plus"></i>
                    </a>
                </span>
            </div>
        </div>

        <ol class="weapon-list item-table item-list">
            {{#each weapons as |weapon id|}}
                <li class="item weapon-item" data-item-id="{{weapon.id}}" data-type="weapon">
                    <div class="weapon-details">
                        <a class="item-weapon-display">
                            <img class="item-image weapon-image" src="{{weapon.img}}" alt="">
                            <span class="item-image weapon-image" title="{{localize 'WITCHER.Item.openDescription'}}">
                                <i class="fa-solid fa-book"></i>
                            </span>
                        </a>
                        <div><a class="item-roll">{{weapon.name}}</a></div>
                        <div class="weapon-label">
                            <span>{{weapon.system.damage}}</span>
                            <span class="reliable-details">
                                <input class="inline-edit reliable-info" data-field="system.reliable" type="text"
                                    value="{{weapon.system.reliable}}" data-dtype="Number" /> | <span
                                    class="">{{weapon.system.maxReliability}}</span>
                            </span>
                            <span><input class="inline-edit item-quantity" data-field="system.quantity" type="text"
                                    value="{{weapon.system.quantity}}" data-dtype="Number" /></span>
                            <span class="weapon-controls">
                                <a class="item-equip {{#if weapon.system.equipped}}equipped{{/if}}" title="{{#if weapon.system.equipped}}
                                    {{localize 'WITCHER.Item.Equipped'}}
                                {{else}}
                                    {{localize 'WITCHER.Item.NotEquipped'}}
                                {{/if}}">
                                    <i
                                        class="{{#if weapon.system.equipped}}fa-solid{{else}}fa-regular{{/if}} fa-hand"></i>
                                </a>
                                {{#if weapon.canBeRepaired}}
                                    <a class="item-repair" title="{{localize 'WITCHER.Repair.buttons.repair'}}"><i
                                            class="fas fa-screwdriver-wrench"></i></a>
                                {{/if}}
                            </span>
                        </div>
                    </div>
                    <div class="invisible item-info weapon-info">
                        <div class="item-tags">
                            <span class="item-tag" title="{{localize "WITCHER.Weapon.Type"}}">
                                {{weapon.system.type.text}}
                            </span>
                            <span class="item-tag" title="{{localize "WITCHER.Weapon.Range"}}">
                                <i class="fa-solid fa-ruler"></i>
                                {{weapon.system.range}}
                            </span>
                            {{#if (gt weapon.system.accuracy 0)}}
                                <span class="item-tag" title="{{localize "WITCHER.Weapon.WeaponAccuracy"}}">
                                    <i class="fa-solid fa-crosshairs"></i>
                                    +{{weapon.system.accuracy}}
                                </span>
                            {{/if}}
                            {{#if weapon.system.isAmmo}}
                                <span class="item-tag">
                                    {{localize "WITCHER.Weapon.isAmmunition"}}
                                </span>
                            {{else}}
                                <span class="item-tag" title="{{localize "WITCHER.Weapon.Hands.title"}}">
                                    <i class="fa-solid fa-hand"></i>
                                    {{ localize (lookup ../config.weapon.hands weapon.system.hands) }}
                                </span>
                            {{/if}}

                            <span class="item-tag" title="{{localize "WITCHER.Weapon.Concealment"}}">
                                <i class="fa-solid fa-eye-slash"></i>
                                {{ localize (lookup ../config.Concealment weapon.system.conceal) }}
                            </span>
                            <span class="item-tag" title="{{localize "WITCHER.Item.Weight"}}">
                                <i class="fa-solid fa-weight-hanging"></i>
                                {{weapon.system.weight}}
                            </span>
                        </div>
                        {{#if weapon.system.description}}
                            <div class="item-description">
                                <h3>{{localize "WITCHER.Item.Description"}}</h3>
                                {{weapon.system.description}}
                            </div>
                        {{/if}}
                        {{#unless (eq type "enhancement")}}
                            {{#if weapon.system.enhancementItems.length}}
                                <div class="weapon-enhancements">
                                    <h3>{{localize "WITCHER.Dialog.Enhancement"}}</h3>
                                    <div class="enhancement-list">
                                        {{#each weapon.system.enhancementItems as |enhancement id|}}
                                            {{#if enhancement.img}}
                                                <div class="item weapon-enhancement" data-item-id="{{enhancement.id}}">
                                                    <div class="enhancement-label">
                                                        <img class="enhancement-img no-margin"
                                                            src="{{enhancement.img}}" />
                                                        <span class="">{{enhancement.name}}</span>
                                                    </div>
                                                    <div class="enhancement-info invisible">
                                                        <div class="item-tags">
                                                            {{#each enhancement.system.effects as |effects|}}
                                                                {{#if (gt effects.percentage 0)}}
                                                                    <div class="item-tag">
                                                                        {{effects.statusEffect}}
                                                                        {{effects.percentage}}%
                                                                    </div>
                                                                {{/if}}
                                                            {{/each}}
                                                        </div>
                                                        <div class="enhancement-effects-name">
                                                            {{#each enhancement.system.effects as |effects|}}
                                                                {{effects.name}}
                                                            {{/each}}
                                                        </div>
                                                    </div>
                                                </div>
                                            {{else}}
                                                <a class="enhancement-label enhancement-weapon-slot">
                                                    <div class="enhancement-slot">
                                                    </div>
                                                    <span>{{localize 'WITCHER.Item.equipEnhancement'}}</span>
                                                </a>
                                            {{/if}}
                                        {{/each}}
                                    </div>
                                </div>
                            {{/if}}
                        {{/unless}}
                    </div>
                </li>
            {{/each}}
        </ol>
    </div>

    <div class="armor-section">
        <h2>{{localize "WITCHER.Inventory.Armor"}}
            <a class="add-item" data-itemType="armor">
                <i class="fas fa-plus"></i>
            </a>
        </h2>
        <table class="armor-table item-list">
            <tr>
                <td></td>
                <td></td>
                <td><b>{{localize "WITCHER.table.Quantity"}}</b></td>
                <td><b>{{localize "WITCHER.table.Name"}}</b></td>
                <td><b>{{localize "WITCHER.table.Equipped"}}</b></td>
                <td><b>{{localize "WITCHER.table.StoppingPower"}}</b></td>
                <td><b>{{localize "WITCHER.table.ResBludgeon"}}</b></td>
                <td><b>{{localize "WITCHER.table.ResSlashing"}}</b></td>
                <td><b>{{localize "WITCHER.table.ResPiercing"}}</b></td>
                <td></td>
            </tr>
            {{#each armors as |armor id|}}
                <tbody class="item" data-item-id="{{armor._id}}" data-type="armor">
                    <tr>
                        <td>
                            <a class="item-armor-display"><i class="fas fa-info"></i></a>
                        </td>
                        <td>
                            {{> "systems/TheWitcherTRPG/templates/partials/item-image.hbs" item=armor}}
                        </td>
                        <td><input class="inline-edit item-quantity" data-field="system.quantity" type="text"
                                value="{{armor.system.quantity}}" data-dtype="Number" /></td>
                        <td><input class="inline-edit" data-field="name" type="text" value="{{armor.name}}"
                                placeholder="name" /></td>
                        {{#if (eq type "enhancement")}}
                            <td colspan="2"></td>
                        {{/if}}
                        {{#unless (eq type "enhancement")}}
                            <td><input class="inline-edit" data-field="system.equipped" type="checkbox"
                                    value={{armor.system.equipped}} {{checked armor.system.equipped}} /></td>
                            <td>
                                {{#if (eq armor.system.location "Head")}}
                                    <div class="flex sp">
                                        <div class="icon-spacer"></div>
                                        <i class="fas fa-hard-hat"></i>
                                        <input class="inline-edit small" data-field="system.headStopping" type="text"
                                            value="{{armor.system.headStopping}}" data-dtype="Number" />
                                        /{{armor.system.headMaxStopping}}
                                    </div>
                                {{/if}}

                                {{#if (eq armor.system.location "Torso")}}
                                    <div class="flex sp">
                                        <div class="icon-spacer"></div>
                                        <i class="fas fa-tshirt"></i>
                                        <input class="inline-edit small" data-field="system.torsoStopping" type="text"
                                            value="{{armor.system.torsoStopping}}" data-dtype="Number" />
                                        /{{armor.system.torsoMaxStopping}}
                                    </div>
                                    <div class="flex sp">
                                        {{localize "WITCHER.Armor.LocationLeft"}}
                                        <i class="fas fa-hand-paper"></i>
                                        <input class="inline-edit small" data-field="system.leftArmStopping" type="text"
                                            value="{{armor.system.leftArmStopping}}" data-dtype="Number" />
                                        /{{armor.system.leftArmMaxStopping}}
                                    </div>
                                    <div class="flex sp">
                                        {{localize "WITCHER.Armor.LocationRight"}}
                                        <i class="fas fa-hand-paper"></i>
                                        <input class="inline-edit small" data-field="system.rightArmStopping"
                                            type="text" value="{{armor.system.rightArmStopping}}" data-dtype="Number" />
                                        /{{armor.system.rightArmMaxStopping}}
                                    </div>
                                {{/if}}

                                {{#if (eq armor.system.location "Leg")}}
                                    <div class="flex sp">
                                        {{localize "WITCHER.Armor.LocationLeft"}}
                                        <i class="fas fa-shoe-prints"></i>
                                        <input class="inline-edit small" data-field="system.leftLegStopping" type="text"
                                            value="{{armor.system.leftLegStopping}}" data-dtype="Number" />
                                        /{{armor.system.leftLegMaxStopping}}
                                    </div>
                                    <div class="flex sp">
                                        {{localize "WITCHER.Armor.LocationRight"}}
                                        <i class="fas fa-shoe-prints"></i>
                                        <input class="inline-edit small" data-field="system.rightLegStopping"
                                            type="text" value="{{armor.system.rightLegStopping}}" data-dtype="Number" />
                                        /{{armor.system.rightLegMaxStopping}}
                                    </div>
                                {{/if}}

                                {{#if (eq armor.system.location "FullCover")}}
                                    <div class="flex sp">
                                        <div class="icon-spacer"></div>
                                        <i class="fas fa-hard-hat"></i>
                                        <input class="inline-edit small" data-field="system.headStopping" type="text"
                                            value="{{armor.system.headStopping}}" data-dtype="Number" />
                                        /{{armor.system.headMaxStopping}}
                                    </div>
                                    <div class="flex sp">
                                        <div class="icon-spacer"></div>
                                        <i class="fas fa-tshirt"></i>
                                        <input class="inline-edit small" data-field="system.torsoStopping" type="text"
                                            value="{{armor.system.torsoStopping}}" data-dtype="Number" />
                                        /{{armor.system.torsoMaxStopping}}
                                    </div>
                                    <div class="flex sp">
                                        {{localize "WITCHER.Armor.LocationLeft"}}
                                        <i class="fas fa-hand-paper"></i>
                                        <input class="inline-edit small" data-field="system.leftArmStopping" type="text"
                                            value="{{armor.system.leftArmStopping}}" data-dtype="Number" />
                                        /{{armor.system.leftArmMaxStopping}}
                                    </div>
                                    <div class="flex sp">
                                        {{localize "WITCHER.Armor.LocationRight"}}
                                        <i class="fas fa-hand-paper"></i>
                                        <input class="inline-edit small" data-field="system.rightArmStopping"
                                            type="text" value="{{armor.system.rightArmStopping}}" data-dtype="Number" />
                                        /{{armor.system.rightArmMaxStopping}}
                                    </div>
                                    <div class="flex sp">
                                        {{localize "WITCHER.Armor.LocationLeft"}}
                                        <i class="fas fa-shoe-prints"></i>
                                        <input class="inline-edit small" data-field="system.leftLegStopping" type="text"
                                            value="{{armor.system.leftLegStopping}}" data-dtype="Number" />
                                        /{{armor.system.leftLegMaxStopping}}
                                    </div>
                                    <div class="flex sp">
                                        {{localize "WITCHER.Armor.LocationRight"}}
                                        <i class="fas fa-shoe-prints"></i>
                                        <input class="inline-edit small" data-field="system.rightLegStopping"
                                            type="text" value="{{armor.system.rightLegStopping}}" data-dtype="Number" />
                                        /{{armor.system.rightLegMaxStopping}}
                                    </div>
                                {{/if}}

                                {{#if (eq armor.system.location "Shield")}}
                                    {{localize "WITCHER.table.Reliability"}}
                                    <input class="inline-edit small" data-field="system.reliability" type="text"
                                        value="{{armor.system.reliability}}" data-dtype="Number" />
                                    /{{armor.system.reliabilityMax}}
                                {{/if}}

                            </td>
                        {{/unless}}
                        <td><input type="checkbox" name="system.bludgeoning" {{checked armor.system.bludgeoning}}
                                disabled />
                        </td>
                        <td><input type="checkbox" name="system.slashing" {{checked armor.system.slashing}} disabled />
                        </td>
                        <td><input type="checkbox" name="system.Piercing" {{checked armor.system.piercing}} disabled />
                        </td>

                    </tr>
                    <tr class="item-info invisible">
                        <td colspan="9">
                            <table>
                                {{#unless (eq type "enhancement")}}
                                    <tr>
                                        <td colspan="8">
                                            <div class="flex">
                                                {{localize "WITCHER.Weapon.Short.Enhancements"}}:
                                                {{#each armor.system.enhancementItems as |enhancement id|}}
                                                    {{#if enhancement.img}}
                                                        <div class="item item-enhancement"
                                                            data-item-id="{{enhancement.id}}">
                                                            <img class="item-edit no-margin"
                                                                src="{{enhancement.img}}" />
                                                        </div>
                                                    {{/if}}
                                                    {{#unless enhancement.img}}
                                                        <div class="item-enhancement">
                                                            <a>
                                                                <div class="enhancement-slot enhancement-armor-slot">
                                                                </div>
                                                            </a>
                                                        </div>
                                                    {{/unless}}
                                                {{/each}}
                                            </div>
                                        </td>
                                    </tr>
                                {{/unless}}
                                {{#if (eq type "armor")}}
                                    <tr>
                                        <td>
                                            <div class="flex"><label class="label-info">
                                                    <b>{{localize "WITCHER.Armor.Short.ArmorEnhancement"}}: </b>
                                                </label>{{armor.system.enhancements}}</div>
                                        </td>
                                        <td>
                                            <div class="flex"><label class="label-info">
                                                    <b>{{localize "WITCHER.Armor.Short.EncumbranceValue"}}: </b>
                                                </label>{{armor.system.encumb}}</div>
                                        </td>
                                        <td>
                                            <div class="flex"><label class="label-info">
                                                    <b>{{localize "WITCHER.Item.Weight"}}: </b>
                                                </label>{{armor.system.weight}}</div>
                                        </td>
                                        <td><a class="item-edit"><i class="fas fa-edit"></i></a></td>
                                    </tr>
                                    <tr>
                                        <td colspan="3">
                                            <div class="flex">
                                                <label><b>{{localize "WITCHER.Item.Effect"}}:</b></label>
                                                {{#each armor.system.effects as |effect id|}}
                                                    {{effect.name}},
                                                {{/each}}
                                            </div>
                                        </td>
                                        <td>
                                            <a class="item-delete"><i class="fas fa-trash-alt"></i></a>
                                            {{#if armor.canBeRepaired}}
                                                <a class="item-repair"><i class="fas fa-screwdriver-wrench"></i></a>
                                            {{/if}}
                                        </td>
                                    </tr>
                                {{/if}}
                                {{#if (eq type "enhancement")}}
                                    <tr>
                                        <td>
                                            <div class="flex"><label class="label-info">
                                                    <b>{{localize "WITCHER.Armor.Short.EncumbranceValue"}}: </b>
                                                </label>{{armor.system.encumb}}</div>
                                        </td>
                                        <td>
                                            <div class="flex"><label class="label-info">
                                                    <b>{{localize "WITCHER.Item.Weight"}}: </b>
                                                </label>{{armor.system.weight}}</div>
                                        </td>
                                        <td><a class="item-edit"><i class="fas fa-edit"></i></a></td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <div>
                                                <label>
                                                    <b>{{localize "WITCHER.Item.Effect"}}: </b>
                                                </label>{{armor.system.effect}}
                                            </div>
                                        </td>
                                        <td>
                                            <a class="item-delete"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                    </tr>
                                {{/if}}
                            </table>
                        </td>
                    </tr>
                </tbody>
            {{/each}}
        </table>
    </div>
</div>
