                    value="{{system.skillTraining3.value}}" placeholder="0" />
            </div>
            <div class="flex">
                <input class="extra-skill-name" name="system.skillTraining4.name" type="text"
                    value="{{system.skillTraining4.name}}" placeholder='{{localize "WITCHER.Actor.SkillName"}}' />
                <input class="extra-skill-value" name="system.skillTraining4.value" type="number"
                    value="{{system.skillTraining4.value}}" placeholder="0" />
            </div>
        </div>
    </div>

