<div class="flex grow">
    <div>
        <div class="skill-column">
            <details open>
                <summary>
                    <h1>{{localize "WITCHER.Actor.Skill.Intelligence"}}</h1>
                </summary>
                <table class="table-skills">
                    {{#each system.skills.int as |skill name|}}
                        {{> "systems/TheWitcherTRPG/templates/partials/character/skill-display.hbs" skill=skill name=name stat="int"}}
                    {{/each}}
                    {{#each customSkills.int}}
                        {{> "systems/TheWitcherTRPG/templates/partials/character/custom-skill-display.hbs"}}
                    {{/each}}
                </table>
            </details>
        </div>

        <div class="skill-info">
            <h3>{{localize "WITCHER.Actor.ImprovementPoints"}}</h3>
            <div class="flex">
                <label>{{localize "WITCHER.Actor.CurrentIP"}}</label>
                <input class="IP-value" name="system.improvementPoints" type="number"
                    value="{{system.improvementPoints}}" placeholder="0" data-dtype="Number" />
            </div>
            <div class="flex">
                <input class="extra-skill-name" name="system.skillTraining1.name" type="text"
                    value="{{system.skillTraining1.name}}" placeholder='{{localize "WITCHER.Actor.SkillName"}}' />
                <input class="extra-skill-value" name="system.skillTraining1.value" type="number"
                    value="{{system.skillTraining1.value}}" placeholder="0" />
            </div>
            <div class="flex">
                <input class="extra-skill-name" name="system.skillTraining2.name" type="text"
                    value="{{system.skillTraining2.name}}" placeholder='{{localize "WITCHER.Actor.SkillName"}}' />
                <input class="extra-skill-value" name="system.skillTraining2.value" type="number"
                    value="{{system.skillTraining2.value}}" placeholder="0" />
            </div>
            <div class="flex">
                <input class="extra-skill-name" name="system.skillTraining3.name" type="text"
