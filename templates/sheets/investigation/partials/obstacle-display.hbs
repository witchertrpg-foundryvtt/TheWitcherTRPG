{{#if item.system.isHidden}}
    {{#if isGM}}
        <tr class="item hidden-view" data-item-id="{{item._id}}">
    {{else}}
        <tr class="item hidden-from-view" data-item-id="{{item._id}}">
    {{/if}}
{{else}}
    <tr class="item" data-item-id="{{item._id}}">
{{/if}}
<td><a data-action="editItem"><i class="fas fa-edit"></i></a></td>
<td><input class="inline-edit" data-field="name" type="text" value="{{item.name}}" placeholder="name" /></td>
<td><input class="inline-edit" data-field="system.type" type="text" value="{{item.system.type}}" /></td>
<td><input class="inline-edit" data-field="system.dc" type="number" value="{{item.system.dc}}" /></td>
<td>
    <multi-select class="inline-edit" data-field="system.skillsUsed">
        {{selectOptions skills selected=system.skillsUsed nameAttr='name' valueAttr="name" labelAttr="label" localize=true}}
    </multi-select>
</td>
<td><input class="inline-edit" data-field="system.successDamage" type="text" value="{{item.system.successDamage}}" />
</td>
<td><input class="inline-edit" data-field="system.failDamage" type="text" value="{{item.system.failDamage}}" /></td>
<td>
    {{#if isGM}}
        <a data-action="deleteItem"><i class="fas fa-trash-alt"></i></a>
        <a data-action="hideItem"><i class="fas fa-eye"></i></a>
    {{/if}}
</td>
</tr>