<section class="{{item.type}} scrollable">
    <header class="sheet-header">
        <h1 class="item-name">
            <input name="name" type="text" value="{{item.name}}" placeholder="Name" />
            {{#if showConfig}}
                <a class="configure-item" data-action="configureItem"><i class="fas fa-gear"></i></a>
            {{/if}}
        </h1>
        <div class="flex">
            <img class="profile-img" src="{{item.img}}" data-action="editImage" data-edit="img" title="{{item.name}}" />
            <table class="information">
                <tr class="item-header-tablerow">
                    <td>
                        <label>{{localize "WITCHER.Item.SourceBook"}}</label>
                    </td>
                    <td>
                        <input type="text" name="system.sourcebook" value="{{item.system.sourcebook}}" />
                    </td>
                </tr>
            </table>
        </div>
    </header>
    <div>
    </div>
    <h2>{{localize "WITCHER.Actor.Perks"}}</h2>
    <div class="flexrow">
        <div class="perk">
            <h3><input name="system.perk1.name" type="text" value="{{item.system.perk1.name}}" /></h3>
            {{formGroup enrichedText.perk1.systemField value=enrichedText.perk1.description enriched=enrichedText.perk1.enriched toggled=true}}
        </div>
        <div class="perk">
            <h3><input name="system.perk2.name" type="text" value="{{item.system.perk2.name}}" /></h3>
            {{formGroup enrichedText.perk2.systemField value=enrichedText.perk2.description enriched=enrichedText.perk2.enriched toggled=true}}
        </div>
    </div>
    <div class="flexrow">
        <div class="perk">
            <h3><input name="system.perk3.name" type="text" value="{{item.system.perk3.name}}" /></h3>
            {{formGroup enrichedText.perk3.systemField value=enrichedText.perk3.description enriched=enrichedText.perk3.enriched toggled=true}}
        </div>
        <div class="perk">
            <h3><input name="system.perk4.name" type="text" value="{{item.system.perk4.name}}" /></h3>
            {{formGroup enrichedText.perk4.systemField value=enrichedText.perk4.description enriched=enrichedText.perk4.enriched toggled=true}}
        </div>
    </div>
    <div class="flexrow">
        <table>
            <tr>
                <th>{{localize "WITCHER.socialStanding.north"}}</th>
                <th>{{localize "WITCHER.socialStanding.nilfgaard"}}</th>
                <th>{{localize "WITCHER.socialStanding.skellige"}}</th>
                <th>{{localize "WITCHER.socialStanding.dolBlathanna"}}</th>
                <th>{{localize "WITCHER.socialStanding.mahakam"}}</th>
            </tr>
            <tr>
                <td>
                    <select name="system.socialStanding.north" id="socialStandingNorth-select">
                        {{selectOptions config.socialStanding selected=item.system.socialStanding.north localize=true}}
                    </select>
                </td>
                <td>
                    <select name="system.socialStanding.nilfgaard" id="socialStandingNilfgaard-select">
                        {{selectOptions config.socialStanding selected=item.system.socialStanding.nilfgaard localize=true}}
                    </select>
                </td>
                <td>
                    <select name="system.socialStanding.skellige" id="socialStandingSkellige-select">
                        {{selectOptions config.socialStanding selected=item.system.socialStanding.skellige localize=true}}
                    </select>
                </td>
                <td>
                    <select name="system.socialStanding.dolBlathanna" id="socialStandingDolBlathanna-select">
                        {{selectOptions config.socialStanding selected=item.system.socialStanding.dolBlathanna localize=true}}
                    </select>
                </td>
                <td>
                    <select name="system.socialStanding.mahakam" id="socialStandingMahakam-select">
                        {{selectOptions config.socialStanding selected=item.system.socialStanding.mahakam localize=true}}
                    </select>
                </td>
            </tr>
        </table>
    </div>
</section>