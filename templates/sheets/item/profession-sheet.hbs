        <div class="profession-flex">
            <div class="profession-card defining-skill">
                <div class="flex defining-skill-header">
                    <input class="profession-skill-input" name="system.definingSkill.skillName" type="text"
                        value="{{item.system.definingSkill.skillName}}" placeholder=""/>
                    <select class="defining-skill-select" name="system.definingSkill.stat">
                        {{#select item.system.definingSkill.stat}}
                            {{#each config.statTypes as |name type|}}
                                <option value="{{type}}">{{localize name}}</option>
                            {{/each}}
                        {{/select}}
                    </select>
                    <input class="profession-level" name="system.definingSkill.level" type="number"
                        value="{{item.system.definingSkill.level}}" placeholder=""/>
                </div>
                {{editor item.system.definingSkill.definition target="system.definingSkill.definition" button=true
                        editable=editable}}
            </div>
            <div class="profession-notes">
                <div class="profession-notes-header">{{localize "WITCHER.Notes"}}</div>
                {{editor item.system.notes target="system.notes" button=true editable=editable}}
            </div>
        </div>
