<section class="scrollable">
    <header class="sheet-header">
        <h1 class="item-name">
            <input name="name" type="text" value="{{item.name}}" placeholder="Name" />
            {{#if showConfig}}
                <a class="configure-item" data-action="configureItem"><i class="fas fa-gear"></i></a>
            {{/if}}
        </h1>
        <div class="flex">
            <img class="profile-img" src="{{ item.img }}" data-action="editImage" data-edit="img"
                title="{{ item.name }}" />
            <table class="information">
                <tr class="item-header-tablerow">
                    <td>
                        <label>{{localize "WITCHER.Item.SourceBook"}}</label>
                    </td>
                    <td>
                        <input type="text" name="system.sourcebook" value="{{item.system.sourcebook}}" />
                    </td>
                </tr>
            </table>
        </div>
    </header>
    {{log this}}
    <div class="profession-layout">
        <div class="profession-flex">
            <div class="profession-card defining-skill">
                <div class="flex defining-skill-header">
                    <input class="profession-skill-input" name="system.definingSkill.skillName" type="text"
                        value="{{ item.system.definingSkill.skillName }}" placeholder="" />
                    <select class="defining-skill-select" name="system.definingSkill.stat">
                        {{selectOptions config.statTypes selected=item.system.definingSkill.stat localize=true}}
                    </select>
                    <input class="profession-level" name="system.definingSkill.level" type="number"
                        value="{{ item.system.definingSkill.level }}" placeholder="" />
                </div>
                {{formInput enrichedText.definingSkill.systemField value=enrichedText.definingSkill.value enriched=enrichedText.definingSkill.enriched toggled=true}}
            </div>
            <div class="profession-notes">
                <div class="profession-notes-header">{{localize "WITCHER.Notes"}}</div>
                {{formInput enrichedText.notes.systemField value=enrichedText.notes.value enriched=enrichedText.notes.enriched toggled=true}}
            </div>
        </div>
